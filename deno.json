{
  "tasks": {
    "build": "vite build",
    "dev": "deno run -A vite & deno run --watch --watch-exclude=public/ --watch-exclude=posts/ -A --env main.ts ",
    "start": "NODE_ENV=production deno run -A --env main.ts",
    "push": "deno run -A npm:drizzle-kit push",
    "generate": "deno run -A --env main.ts & deno run -A --unstable --env npm:@gqty/cli"
  },
  "compilerOptions": {
    "lib": ["deno.ns", "dom"],
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  },
  "exclude": ["dist/", "public/", "posts/"],
